@page "{id:int}"
@model HiringPanel.Razor.Pages.Applicants.DeleteModel
@{
    ViewData["Title"] = "Delete Applicant";
}

<h1>Delete Applicant</h1>

<h3>Are you sure you want to delete this applicant?</h3>

<div class="border p-4 max-w-md">
    <p><strong>Name:</strong> @Model.Applicant.Name</p>
    <p><strong>Email:</strong> @Model.Applicant.Email</p>
</div>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="Applicant.Id" />
    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Delete</button>
    <a asp-page="/Index" class="ml-4 text-gray-700 hover:underline">Cancel</a>
</form>
