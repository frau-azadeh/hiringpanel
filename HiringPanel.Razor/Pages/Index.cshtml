@page
@model HiringPanel.Razor.Pages.Applicants.IndexModel
@{
    ViewData["Title"] = "Applicants List";
}

<h1 class="text-2xl font-semibold mb-5 text-gray-900">Applicants List</h1>

<table class="w-full text-left border-collapse border border-gray-200">
    <thead>
        <tr class="bg-gray-50">
            <th class="border border-gray-200 px-4 py-2">ID</th>
            <th class="border border-gray-200 px-4 py-2">Name</th>
            <th class="border border-gray-200 px-4 py-2">Email</th>
            <th class="border border-gray-200 px-4 py-2">Edit</th>
            <th class="border border-gray-200 px-4 py-2">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var applicant in Model.Applicants)
        {
            <tr class="hover:bg-gray-100 transition-colors">
                <td class="border border-gray-200 px-4 py-2">@applicant.Id</td>
                <td class="border border-gray-200 px-4 py-2 font-medium">@applicant.Name</td>
                <td class="border border-gray-200 px-4 py-2">@applicant.Email</td>
                <td class="border border-gray-200 px-4 py-2 text-center">
                    <a asp-page="/Applicants/Edit" asp-route-id="@applicant.Id" class="text-blue-500 hover:text-blue-700">Edit</a>
                </td>
                <td class="border border-gray-200 px-4 py-2 text-center">
                    <a asp-page="/Applicants/Delete" asp-route-id="@applicant.Id" class="text-red-500 hover:text-red-700">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
